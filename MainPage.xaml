<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PiClientV1.MainPage"
             Title="π-Исчисление">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Заголовок -->
            <Label Text="π-Исчисление Роберта Милнера"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <!-- Поле ввода процесса -->
            <Frame BorderColor="LightGray" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Определение процесса:"
                           FontSize="16"
                           FontAttributes="Bold"/>

                    <Editor x:Name="ProcessEditor"
                            Text="a![b].0 | a?(x).0"
                            Placeholder="Введите процесс π-исчисления..."
                            HeightRequest="100"
                            FontFamily="Courier"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Выбор режима -->
            <Frame BorderColor="LightGray" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Режим работы:"
                           FontSize="16"
                           FontAttributes="Bold"/>

                    <RadioButton x:Name="LearningRadio"
                                 Content="Обучающий режим"
                                 IsChecked="True"
                                 GroupName="Mode"/>

                    <RadioButton x:Name="AutoRadio"
                                 Content="Автоматический режим"
                                 GroupName="Mode"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Примеры процессов -->
            <Frame BorderColor="LightGray" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Примеры процессов:"
                           FontSize="16"
                           FontAttributes="Bold"/>

                    <Button Text="a![b].0 | a?(x).0"
                            Clicked="OnExampleClicked"
                            BackgroundColor="LightBlue"/>
                    <Button Text="a![b].0 | a?(x).x![c].0"
                            Clicked="OnExampleClicked"
                            BackgroundColor="LightBlue"/>
                    <Button Text="a?(x).b![x].0 | a![hello].0"
                            Clicked="OnExampleClicked"
                            BackgroundColor="LightBlue"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Ошибка -->
            <Label x:Name="ErrorLabel"
                   TextColor="Red"
                   IsVisible="False"/>

            <!-- Кнопка запуска -->
            <Button x:Name="StartButton"
                    Text="Начать выполнение"
                    Clicked="OnStartClicked"
                    BackgroundColor="#512BD4"
                    TextColor="White"
                    FontSize="16"
                    HeightRequest="50"/>

            <!-- Индикатор загрузки -->
            <ActivityIndicator x:Name="LoadingIndicator"
                             IsRunning="False"
                             IsVisible="False"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>